package org.example;

import java.util.ArrayList; //googlet litt etter lister
import java.util.List;


// Metoder for nye innlegg, metode for å vise innlegg, lagrer liste med innlegg.

public class Diary {
    private final List<DiaryEntry> innlegg; //opretter ny privat liste
    //Final ikke nødvendig, men å holde denne uendret gjør den mer "robust"

    public Diary() {
        this.innlegg = new ArrayList<>(); //konstruktør for Diary, skal lage en ny tom arraylist når en ny "diary" lages
    } //fordi "this."

    public void leggTilInnlegg(String tittel, String forfatter, String innhold) {
        innlegg.add(new DiaryEntry(tittel, forfatter, innhold)); //Nødvendig settup, tror jeg, tidlig kjørte koden uten dette
        // men koden kjører også med dette, og jeg får mindre feil når jeg bruker dette, lmao.
        // Edit: Nødvendig nå, trengs for at main skal fungere. Må bruke eksisterende metode
    }

    public void visAlleInnlegg() { //dette er for #2, skal la meg se tidligere skrevet dagbøker.
        if (innlegg.isEmpty()) {
            System.out.println("Ingen dagbokinnlegg."); //sjekker først om den er tom
            return; // TO DO: lagre dagbokentries som tekstfil annet sted en intelliJ
        }
        for (DiaryEntry entry : innlegg) { // hvis if statementet ikke går gjennom (altså det er et inlegg)
            System.out.println(entry);
            System.out.println("---------------------------");
        }
    }
}
